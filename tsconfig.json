{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom", "es2017.object" ],
//    "strict": true,
//    "suppressImplicitAnyIndexErrors": true,
//    "removeComments": false,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
//    "skipLibCheck": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts",
    "**/*.spec.ts"
  ]
}
